<h1>{{title}}</h1>

<h2>Monthly Income</h2>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Sender</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        {{#each incomes}}
            <tr>
                <td>{{{ date date "DD/MM/YYYY" }}}</td>
                <td>{{transactionSource}}</td>
                {{#each segments}}
                    <td>{{../../budget.currency}}{{amount}}</td>
                    <td>{{#with categoryId}}{{name}}{{/with}}</td>
                {{/each}}
                <td>{{notes}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<h2>Monthly Expenses</h2>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Recipient</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
            <tr>
                <td>{{{ date date "DD/MM/YYYY" }}}</td>
                <td>{{transactionSource}}</td>
                {{#each segments}}
                    <td>{{../../budget.currency}}{{amount}}</td>
                    <td>{{#with categoryId}}{{name}}{{/with}}</td>
                {{/each}}
                <td>{{notes}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<h2>Monthly Budget Values</h2>
<table>
    <thead>
        <tr>
            <th>Category</th>
            <th>Planned</th>
            <th>Actual </th>
            <th>Difference</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
            {{#compare label "===" "income"}}
        <tr>
            <td>{{name}}</td>
            <td>{{plannedAmount}}</td>
            <td>{{actualAmount}}</td>
            <td>{{difference}}</td>
        </tr>
       
    
        {{/compare}}
       {{/each}}

       {{#each categories}}
            {{#compare label "===" "expense"}}
        <tr>
            <td>{{name}}</td>
            <td>{{plannedAmount}}</td>
            <td>{{actualAmount}}</td>
            <td>{{difference}}</td>
        </tr>
        {{/compare}}
       {{/each}}
    </tbody>
</table>
