<form method="POST">
    <label for="new-category">Add category:</label>
    <input type="text" id="new-category" name="name" placeholder="Category" required>

    <label for="new-planned-amount">Planned amount:</label>
    <input type="number" id="new-planned-amount" name="plannedAmount" placeholder="Planned Amount" value="0">

    <label for="new-label">Expense or income?</label>
    <select type="category" id="new-label" name="label" required>
        <option value="" selected >Label</option>
        <option value="income" >Income</option>
        <option value="expense" >Expense</option>
    </select>

    <button type="submit">Add</button>
</form>